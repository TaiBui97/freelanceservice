@model DACN.Models.DataModel.TaiKhoan
@{
    ViewBag.Title = "ChanglePassword";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}

<div class="job-alerts-item">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h3 class="alerts-title">Change Password</h3>
        @ViewBag.ThongBao
        <div class="form">
            <div class="form-group is-empty">
                <label class="control-label" for="textarea">Old Password*</label>
                @Html.Password("PwdOld", null, new { @class = "form-control" })

            </div>
            <div class="form-group is-empty">
                <label class="control-label" for="textarea">New Password*</label>
                @Html.Password("NewPwd", null, new { @class = "form-control" })

                <span class="material-input"></span>
            </div>
            <div class="form-group is-empty">
                <label class="control-label" for="textarea">Confirm New Password*</label>
                @Html.Password("ComfirmPwd", null, new { @class = "form-control" })
                <span class="material-input"></span>
            </div>
            <button type="submit" class="btn btn-common log-btn">Đỗi mật khẩu</button>
        </div>
    }
</div>