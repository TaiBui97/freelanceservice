
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="author" content="Jobboard">
    <title>Chợ kĩ năng</title>
    <link rel="shortcut icon" href="~/assets/img/favicon.png">
    @Styles.Render("~/bundles/core")
    <link rel="stylesheet" href="~/assets/fonts/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/assets/fonts/themify-icons.css">

</head>
<body>

    @RenderPage("~/Views/Shared/Header.cshtml")
    <div class="page-header" style="background: url('../../assets/img/banner1.jpg');">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-wrapper">
                        <h2 class="product-title">My Account</h2>
                        <ol class="breadcrumb">
                            <li><a href="#"><i class="ti-home"></i> Home</a></li>
                            <li class="current">My Account</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="content" class="my-account">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-6 cd-user-modal">
                    <div class="my-account-form">
                     

                        @using (Html.BeginForm())
                        {
                            <div class="page-login-form is-selected" id="cd-reset-password">
                                <p class="cd-form-message">Quên mật khẩu? Vui lòng nhập địa chỉ email. Bạn sẽ nhận được đường dẫn để tạo mật khẩu mới.</p>
                                @ViewBag.Message

                                <form class="cd-form">
                                    <div class="form-group">
                                        <div class="input-icon">
                                            <i class="ti-email"></i>
                                            @Html.TextBox("Email", "", new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <p class="fieldset">
                                        <button class="btn btn-common log-btn" type="submit">Đặt lại mật khẩu</button>
                                    </p>
                                </form>
                                <a href="@Url.Action("DangKy","Home")">Trở lại đăng nhập</a>
                            </div>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>


    @RenderPage("~/Views/Shared/Footer.cshtml")
    @Scripts.Render("~/bundles/js")
</body>

</html>
