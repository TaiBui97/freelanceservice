@model DACN.Models.DataModel.TaiKhoan

@{
    ViewBag.Title = "SuaMoTa";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}
<script src="~/assets/plusins/ckeditor/ckeditor.js"></script>
<h3 class="alerts-title">Cập nhật mô tả</h3>
<br />
<hr>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTaiKhoan)


        <div class="form-group">
            <label class="control-label col-md-2">Mô tả </label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MoTaTaiKhoan, new { @id = "ckeContent" })

                <script>

                    CKEDITOR.replace("ckeContent");

                </script>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-common" />
            </div>
        </div>
    </div>
}

