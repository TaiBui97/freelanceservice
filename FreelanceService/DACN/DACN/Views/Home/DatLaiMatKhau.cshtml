@{
    Layout = null;
}
@model DACN.Models.DataModel.DatLaiMKModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="author" content="Jobboard">
    <title>Chợ kĩ năng</title>
    <link rel="shortcut icon" href="~/assets/img/favicon.png">
    @Styles.Render("~/bundles/core")
    <link rel="stylesheet" href="~/assets/fonts/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/assets/fonts/themify-icons.css">

</head>
<body>

    @RenderPage("~/Views/Shared/Header.cshtml")
    <div class="page-header" style="background: url('../../assets/img/banner1.jpg');">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="breadcrumb-wrapper">
                        <h2 class="product-title">My Account</h2>
                        <ol class="breadcrumb">
                            <li><a href="#"><i class="ti-home"></i> Home</a></li>
                            <li class="current">My Account</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="content" class="my-account">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-6 cd-user-modal">
                    <div class="my-account-form">
                       
                        <h3 style="color:#f96b73; text-align:center;">ĐẶT LẠI MẬT KHẨU</h3>


                        <div id="cd-signup" class="is-selected">
                            <div class="page-login-form register">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="text-danger">
                                        @ViewBag.Message
                                    </div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        <div class="input-icon">
                                            <i class="ti-lock"></i>

                                            @Html.EditorFor(model => model.MatKhauMoi, new { htmlAttributes = new { @class = "form-control", placeholder = "Mật khẩu mới" } })
                                            @Html.ValidationMessageFor(model => model.MatKhauMoi, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-icon">
                                            <i class="ti-lock"></i>
                                            @Html.EditorFor(model => model.XacNhanMK, new { htmlAttributes = new { @class = "form-control", placeholder = "Xác nhận mật khẩu mới" } })
                                            @Html.ValidationMessageFor(model => model.XacNhanMK, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.HiddenFor(a => a.DatLaiMa)
                                    </div>
                                    <button type="submit" class="btn btn-common log-btn">Xác nhận</button>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    @RenderPage("~/Views/Shared/Footer.cshtml")
    @Scripts.Render("~/bundles/js")
    @section Scripts{
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }
</body>

</html>