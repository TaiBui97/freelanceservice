@model DACN.Models.DataModel.DanhMuc

@{
    ViewBag.Title = "HienThi";
    Layout = "~/Views/Shared/_Layout _Admin.cshtml";
}



<div class="col-lg-9">
    <div class="card">
        <div class="card-header">
            <strong>Hiển thị danh mục</strong>
        </div>
        <div class="card-body card-block">
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="hf-email" class=" form-control-label">Tên Danh Mục</label>
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.TenDM)
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-3">
                    <label for="hf-email" class=" form-control-label">Độ ưu tiên</label>
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.DoUuTien)
                </div>
            </div>
            
        </div>
        <div class="card-footer">
            <button style="height:38px" type="submit" class="btn btn-success btn-sm btn-custom">
                <i class="fa fa-dot-circle-o"></i><a style="color:white; margin-left:5px;" href="@Url.Action("ChinhSua", "QuanLyMetaData", new {  @madm = Model.MaDM }) ">Chỉnh sửa</a> 
            </button>

            <label style="margin-bottom:0!important;" class="btn btn-danger btn-custom">
                <i class="ti-arrow-left"></i>
                <a style="color:white; " href="@Url.Action("Index", "QuanLyMetaData")">Trở về</a>
            </label>

        </div>
    </div>

</div>
