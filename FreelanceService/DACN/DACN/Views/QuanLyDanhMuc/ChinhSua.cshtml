@model DACN.Models.DataModel.DanhMuc

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Shared/_Layout _Admin.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaDM)
    @Html.ValidationSummary(true)
    <div class="col-lg-9">
        <div class="card">
            <div class="card-header">
                <strong>Chỉnh sửa danh mục </strong>
            </div>
            <div class="card-body card-block">
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label for="hf-email" class=" form-control-label">Mã Danh Mục</label>                
                        @Html.Hidden("MaDM", Model.MaDM)
                    </div>
                    <div class="col-12 col-md-9">
                        @Model.MaDM

                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="hf-email" class=" form-control-label">Tên Danh Mục</label></div>
                    <div class="col-12 col-md-9">
                        @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control", @placeholder = " eg : Thiết kế đồ họa" } })
                        @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
                        <span class="help-block">Vui lòng nhập tên danh mục</span>

                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="hf-password" class=" form-control-label">Độ Ưu Tiên</label></div>
                    <div class="col-12 col-md-9">
                        @Html.EditorFor(model => model.DoUuTien, new { htmlAttributes = new { @class = "form-control", @placeholder = "eg : 1" } })
                        @Html.ValidationMessageFor(model => model.DoUuTien, "", new { @class = "text-danger" })
                        <span class="help-block">Vui lòng nhập độ ưu tiên danh mục</span>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button style="height:38px" type="submit" class="btn btn-success btn-sm btn-custom">
                    <i class="fa fa-dot-circle-o"></i> Lưu vào
                </button>
                <label style="margin-bottom:0!important;" class="btn btn-danger btn-custom">
                    <i class="ti-arrow-left"></i>
                    <a style="color:white; " href="@Url.Action("Index", "QuanLyDanhMuc")">Trở về</a>
                </label>

            </div>
        </div>

    </div>
}